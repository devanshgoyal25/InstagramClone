<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ComposeFragment">


    <ImageView
        android:id="@+id/instagramLogo"
        android:layout_width="207dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-13dp"
        android:layout_marginTop="0dp"
        android:contentDescription="Instagram Logo for Improved UI"
        app:srcCompat="@drawable/ic_nav_logo_whiteout" />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="409dp"
        android:layout_height="84dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="431dp"
        android:layout_marginEnd="0dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Say something about your image..."
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="376dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="21dp"
        android:text="Post" />

    <ImageView
        android:id="@+id/ivPostImage"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="165dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/btnCaptureImage"
        android:layout_width="76dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="324dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FFFFFF"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@android:drawable/ic_menu_camera"
        android:tint="#00FFFFFF" />


</RelativeLayout>